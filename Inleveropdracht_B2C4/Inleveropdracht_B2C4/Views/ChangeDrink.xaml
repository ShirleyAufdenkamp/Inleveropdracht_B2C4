<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inleveropdracht_B2C4.Views.ChangeDrink">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#EDE3FF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>

                <Label Text="Drank:" Grid.Column="0" Grid.Row="0" FontSize="20" TextColor="Black"/>
                <Entry x:Name ="En_Drink" Grid.Column="1" Grid.Row="0" TextColor="Black" FontSize="20"/>
                <Label Text="Nieuw naam:" FontSize="20" TextColor="Black"  Grid.Column="0" Grid.Row="1"/>
                <Entry x:Name ="En_NwDrink" Grid.Column="1" Grid.Row="1" TextColor="Black" FontSize="20"/>

            </Grid>
            <Button x:Name="Bt_Change" Margin="20,20,20,20" HorizontalOptions="CenterAndExpand" Text="Wijzig" TextColor="White" BackgroundColor="Purple"  Clicked="Cl_Change"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>