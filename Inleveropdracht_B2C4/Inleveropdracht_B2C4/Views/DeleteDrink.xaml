<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Inleveropdracht_B2C4.Views.DeleteDrink">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#EDE3FF">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>

                <Label Text="Drank:" TextColor="Black"  Grid.Column="0" FontSize="20"/>
                <Label Text="Afbeelding: " TextColor="Black"   Grid.Row="1" Grid.Column="0" FontSize="20"/>
                <Entry x:Name ="En_DeDrink" TextColor="Black" Grid.Column="1" Grid.Row="0"/>
            </Grid>
            <Button x:Name="Bt_Delete" Margin="20,20,20,20" HorizontalOptions="CenterAndExpand" Text="Verwijder" TextColor="White" BackgroundColor="Purple"  Clicked="Cl_Delete"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>